program Project1;

uses
  Vcl.Forms,
  System.SysUtils,
  MainFormpas in 'MainFormpas.pas',
  AsmTouch in 'AsmTouch.pas',
  MemStats in 'MemStats.pas';

{$R *.res}

var
  Shown: Boolean = False;

procedure AppIdle(Sender: TObject; var Done: Boolean);
begin
  if not Shown then
  begin
    Form1.Show;   // ★ Run開始後に表示
    Shown := True;
  end;
  Done := True;
end;

begin
  Application.Initialize;
  Application.MainFormOnTaskbar := True;

  Form1 := TForm1.Create(nil);

  Application.OnIdle := AppIdle;   // ★ ここが重要

  Application.Run;

  Form1.Free;
end.

